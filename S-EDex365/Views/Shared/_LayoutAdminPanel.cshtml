<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Fira Sans', sans-serif;
        }

        .hamburger {
            background: none;
            border: none;
        }

            .hamburger .hamburger-box {
                display: block;
            }
    </style>
</head>
<body>
    <header class="app-header app-header-dark" style="background-color: black;">
        <div class="top-bar">
            <div class="top-bar-brand">
                <!-- Toggle Button -->
                <button class="hamburger hamburger-squeeze mr-2"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#asideMenu"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </header>

    <!-- Collapsible Menu -->
    <div class="collapse" id="asideMenu">
        <nav class="bg-dark p-3">
            <ul class="list-unstyled">
                <li><a href="#" class="text-white">Dashboard</a></li>
                <li><a href="#" class="text-white">Roles</a></li>
                <li><a href="#" class="text-white">Users</a></li>
                <li><a href="#" class="text-white">Teacher Approval</a></li>
            </ul>
        </nav>
    </div>

    <main class="app-main">
        <div class="wrapper">
            <div class="page">
                <div class="page-inner">
                    <div class="page-section">
                        <h1>Welcome to the Admin Dashboard</h1>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
