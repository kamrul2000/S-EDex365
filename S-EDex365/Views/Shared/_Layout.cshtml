<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - S-EDex365</title>
    <!-- Core Css -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:400,500,600" rel="stylesheet" asp-append-version="true">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/theme.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.4/css/jquery.dataTables.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.3.5/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="~/frontend/css/iconfont/tabler-icons.css">
    <link rel="stylesheet" href="~/frontend/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    
   

    <!-- Toastr CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <!--Otp Card Design CDN-->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    
    
    

</head>
<body>

    <header class="main-header position-fixed w-100 bg-white shadow-sm">
        <div class="container">
            <nav class="navbar navbar-expand-xl py-2 align-items-center">
                <!-- Logo -->
                <a class="navbar-brand py-0 me-3" asp-action="Index" asp-controller="Home">
                    <img src="~/images/logos/dark-logo.png" alt="Logo">
                </a>

                <!-- Mobile Sign In Button (only visible on small screens) -->
                <div class="d-xl-none ms-auto">
                    <a class="btn btn-primary text-white px-4 py-2 fw-semibold text-capitalize d-flex align-items-center justify-content-center"
                       asp-action="Login" asp-controller="Auth">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In
                    </a>
                </div>

                <!-- Desktop Navbar Content -->
                <div class="collapse navbar-collapse d-none d-xl-flex justify-content-end" id="navbarSupportedContent">
                    <a class="btn btn-primary text-white px-4 py-2 fw-semibold text-capitalize d-flex align-items-center justify-content-center"
                       asp-action="Login" asp-controller="Auth">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In
                    </a>
                </div>
            </nav>
        </div>
    </header>


    <main role="main" class="pb-0">
        @RenderBody()
    </main>
    <footer class="footer bg-light text-dark pt-5 pb-3">
        <div class="container">
            <div class="row">
                <!-- Edex365 About Section -->
                <div class="col-xxl-5 col-lg-5 col-md-8 col-sm-12 mb-4">
                    <div class="blog mb-3">
                        <p class="mb-0 fs-6">
                            Welcome to <strong>EDex365</strong>, your ultimate education platform designed to bridge the gap
                            between students and teachers in a collaborative, problem-solving environment.
                        </p>
                        <p class="mt-2 fs-6">
                            At <strong>EDex365</strong>, we believe education is more than just lectures and textbooks —
                            it’s about empowering students to overcome challenges and fostering a community where knowledge thrives.
                        </p>
                    </div>
                    <div class="blog mb-3">
                        <a asp-action="DownloadApk" asp-controller="APK">
                            <img src="~/images/logos/Capture.png" alt="Download Edex365 App" />
                        </a>
                        <p class="mb-0 fs-6" style="display: none;">
                            It has survived not only centuries, that rela but also the all this among lea.
                        </p>
                    </div>
                </div>

                <!-- Useful Links -->
                <div class="col-xxl-3 col-lg-3 col-md-4 col-sm-6 mb-4">
                    <h5 class="fw-bold fs-5">Quick Links</h5>
                    <ul class="list-unstyled ml-3">
                        <li><a href="/" class="text-dark text-decoration-none">Home</a></li>
                        <li><a href="/about" class="text-dark text-decoration-none">About Us</a></li>
                        <li><a href="/contact" class="text-dark text-decoration-none">Contact</a></li>
                        <li><a href="/privacy" class="text-dark text-decoration-none">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-xxl-4 col-lg-4 col-md-6 col-sm-12 mb-4">
                    <h5 class="fw-bold fs-5 ">
                        Contact Us
                    </h5>
                    <p class="fs-6 mb-1 ">
                        <i class="fas fa-envelope me-2"></i>
                        Email:
                        <a href="mailto:support@edex365.com" class=" text-dark text-decoration-none">support@edex365.com</a>
                    </p>
                    <p class="fs-6 mb-1 ">
                        <i class="fas fa-phone-alt me-2"></i>
                        Phone: +880 1234 567 890
                    </p>
                    <p class="fs-6 mb-0 ">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        Address: Dhaka, Bangladesh
                    </p>
                </div>

            </div>

            <hr />

            <!-- Footer Bottom -->
            <div class="row">
                <div class="col text-center">
                    <p class="mb-0 fs-6">
                        &copy; <span id="year"></span> Edex365. All rights reserved.
                    </p>
                </div>
            </div>
        </div>

        <!-- JavaScript for dynamic year -->
        <script>
            document.getElementById("year").textContent = new Date().getFullYear();
        </script>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js" asp-append-version="true"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/menu.min.js"></script>
    <script src="~/js/scrollbar.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/plugins/swiper/swiper.min.js"></script>
    <script src="~/plugins/parsley/parsley.min.js"></script>
    <script src="~/plugins/isotope/isotope.pkgd.min.js"></script>
    <script src="~/js/theme.js"></script>
    <script src="~/sitejs/changepass.js"></script>
    <script src="https://kit.fontawesome.com/e19c476714.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.11.4/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js" asp-append-version="true"></script>
   
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.3.5/js/dataTables.buttons.min.js" asp-append-version="true"></script>
    <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js" asp-append-version="true"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.3.5/js/buttons.html5.min.js" asp-append-version="true"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/buttons/2.3.5/js/buttons.print.min.js" asp-append-version="true"></script>
    <script type="text/javascript" charset="utf8" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js" asp-append-version="true"></script>
    
    <script src="~/frontend/js/custom.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
