@model S_EDex365.Model.Model.ContactMe
@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EDex365</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


</head>
<body>
    @* Hero Section Start *@
    <section class="hero-banner position-relative py-5 bg-light">
        <div class="container position-relative">
            <div class="row justify-content-center">
                <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12 text-center">
                    <h1 class="hero-title display-4 fw-bold text-uppercase mb-4">
                        If you can<br>
                        <span class="text-primary position-relative d-inline-block">
                            imagine it
                            <span class="position-absolute top-100 start-50 translate-middle-x w-100 border-top border-primary" style="height: 2px;"></span>
                        </span>
                        <br>we can make it
                    </h1>
                    <p class="hero-subtitle fs-5 fw-light text-muted mb-4 mx-auto" style="max-width: 800px;">
                        Welcome to EDex365, your ultimate education platform designed to bridge the gap between students and teachers in a collaborative, problem-solving environment.
                    </p>



                    <div class="hero-action d-flex flex-wrap justify-content-center gap-3">
                        <a href="#" class="btn btn-primary px-4 py-2 fw-medium text-white d-flex justify-content-center align-items-center">
                            Learn More
                        </a>
                        <a href="#" class="btn btn-outline-primary px-4 py-2 fw-medium d-flex justify-content-center align-items-center">
                            Contact Us
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </section>
    @* Hero Section End *@

    <!-- Collapse Section -->
   

    <!-- Contact Section -->
    <section class="contact position-relative mt-5">
        <div class="container">
            <div class="row align-items-stretch">
                <!-- Left Side: Text -->
                <div class="col-xxl-6 col-xl-6 col-lg-6 col-12 d-flex">
                    <div class="p-3 w-100 d-flex flex-column justify-content-center bg-light">
                        <h5 class="fs-7 text-uppercase fw-semibold mb-2">Contact us now</h5>
                        <div class="fs-2 section-heading text-uppercase fw-bold">
                            Have a<br> problem?<br> We are here<br> to help you
                        </div>
                    </div>
                </div>

                <!-- Right Side: Form -->
                <div class="col-xxl-6 col-xl-6 col-lg-6 col-12 d-flex">
                    <div class="p-3 w-100 bg-white">
                        <form id="contactMeForm" asp-action="InsertContactMe" asp-controller="ContactMe" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-uppercase fs-6 mb-2">Full Name</label>
                                    <input type="text" class="form-control border-0" placeholder="Enter your name" asp-for="FullName">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-uppercase fs-6 mb-2">Email</label>
                                    <input type="email" class="form-control border-0" placeholder="Enter your email" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-12 mb-3">
                                    <label class="form-label text-uppercase fs-6 mb-2">Message</label>
                                    <textarea class="form-control border-0" rows="5" placeholder="Enter your message" asp-for="Message"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                                <div class="col-12 text-center">
                                    <button type="submit" class="btn btn-primary d-flex justify-content-center align-items-center mx-auto px-4 py-2">
                                        Submit
                                    </button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    


</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#contactMeForm").submit(function (event) {
                event.preventDefault();  // Prevent default form submission

                var form = $(this);
                var url = form.attr('action');  // Get the form's action URL

                $.ajax({
                    url: url,
                    type: 'POST',
                    data: form.serialize(),  // Serialize form data for submission
                    success: function (response) {
                        // If validation passes, show a success message or redirect
                        if (response.result) {
                            alert('Form submitted successfully!');
                            // You can also redirect if needed:
                            // window.location.href = '/SuccessPage';
                        } else {
                            // Show validation errors if there are any
                            displayValidationErrors(response.errors);
                        }
                    },
                    error: function () {
                        alert('An error occurred during the form submission.');
                    }
                });
            });
        });

        // Function to display validation errors
        function displayValidationErrors(errors) {
            // Clear existing errors
            $("span.text-danger").text("");

            // Display new validation errors
            for (var field in errors) {
                if (errors.hasOwnProperty(field)) {
                    var errorMessage = errors[field];
                    $("input[name='" + field + "'], textarea[name='" + field + "']").next(".text-danger").text(errorMessage);
                }
            }
        }
    </script>

}



