@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EDex365</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    @* Hero Section Start *@
    <section class="hero-banner position-relative">
        <div class="container position-relative">
            <div class="row d-flex justify-content-center">
                <div class="col-xxl-7 col-xl-8 col-lg-9 col-md-12 col-sm-12 col-12 text-center">
                    <div class="hero-title fs-1 fw-bold text-uppercase">
                        If you can<br>
                        <div class="highlight-hero-title position-relative">
                            <div class="highlight-hero-title-inner">imagine it</div>
                        </div>
                        we can make it
                    </div>
                    <p class="hero-subtitle fs-5 fw-normal mx-auto mb-0" style="display:none">We are a creative design agency located in the city of San Francisco, California.</p>
                    <div class="hero-action d-flex flex-wrap justify-content-center gap-3">
                        <a href="#" style="display:none" class="btn btn-primary btn-hover-secondery text-capitalize fw-normal">Learn More</a>
                        <a href="#" style="display:none" class="btn btn-outline-primary btn-hover-outline-secondery text-capitalize fw-normal">Contact Us</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @* Hero Section End *@

    <!-- Collapse Section -->
    <section class="container mt-5"  style="display:none">
        <h2 class="text-center mb-4">Collapsible Section Example</h2>
        <div class="text-center">
            <!-- Collapse Button -->
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseContent" aria-expanded="false" aria-controls="collapseContent">
                Toggle Collapse
            </button>
        </div>
        <!-- Collapsible Content -->
        <div class="collapse mt-3" id="collapseContent">
            <div class="card card-body">
                This is the collapsible content section. You can use this space to show or hide additional details.
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact position-relative mt-5">
        <div class="container">
            <div class="row">
                <div class="col-xxl-6 col-xl-6 col-lg-6 col-12">
                    <h5 class="fs-7 section-subheading text-uppercase fw-500">Contact us now</h5>
                    <div class="fs-2 section-heading text-uppercase fw-bold">
                        Have a<br> problem?<br> We are here<br> to help you
                    </div>
                </div>
                <div class="col-xxl-6 col-xl-6 col-lg-6 col-12">
                    <form>
                        <div class="row">
                            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="form-label text-uppercase fs-6 mb-3">Full Name</label>
                                    <input type="text" class="form-control border-0" placeholder="Enter your name">
                                </div>
                            </div>
                            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                <div class="form-group">
                                    <label class="form-label text-uppercase mb-3">Email</label>
                                    <input type="email" class="form-control border-0" placeholder="Enter your email">
                                </div>
                            </div>
                            <div class="col-xxl-12 col-xl-12 col-12">
                                <div class="mb-xxl-4 mb-xl-4 mb-lg-4 mb-md-4 mb-sm-3 mb-3">
                                    <label class="form-label text-uppercase mb-3">Message</label>
                                    <textarea class="form-control border-0" placeholder="Enter your message"></textarea>
                                </div>
                            </div>
                            <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-4 col-12 d-flex justify-content-end">
                                <button class="btn btn-primary btn-hover-secondery text-capitalize mt-2 w-100">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
