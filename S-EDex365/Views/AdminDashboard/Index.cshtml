@model S_EDex365.Model.Model.AdminDashboard
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}

<div class="row">

    <!-- Total Problems -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Problems
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalProblems</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Pending -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Pending Solutions
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingSolutions</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-hourglass-half fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Solutions -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Solutions
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalSolutions</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Pie Chart Section using Bootstrap Card Template -->
<div class="col-xl-4 col-lg-5">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Problem Stats</h6>
        </div>
        <div class="card-body">
            <div class="chart-pie pt-4 pb-2">
                <canvas id="myPieChart" style="max-height: 300px;"></canvas>
            </div>
            <div class="mt-4 text-center small">
                <span class="mr-2">
                </span>
                <span class="mr-2">
                </span>
                <span class="mr-2">
                </span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById("myPieChart").getContext('2d');

        const totalProblems = @Model.TotalProblems ?? 0;
        const pendingSolutions = @Model.PendingSolutions ?? 0;
        const solvedProblems = @Model.TotalSolutions ?? 0;

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ["Total Problems", "Pending Solutions", "Solved"],
                datasets: [{
                    data: [totalProblems, pendingSolutions, solvedProblems],
                    backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc'],
                    hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 80,
            },
        });
    </script>
}



