<section class="container">
    <header>Registration Form</header>
    <form class="form" method="post">
        <div class="column">
            <div class="input-box">
                <label>FullName</label>
                <input type="text" placeholder="Enter full name" id="name" required />
            </div>
            <div class="input-box">
                <label>EmailAddress</label>
                <input type="text" placeholder="Enter email address"  id="email" required />
            </div>
        </div>
        
        <div class="column">
            <div class="input-box">
                <label>PhoneNumber</label>
                <input type="number" placeholder="Enter phone number" id="mobileNo" required />
            </div>
            <div class="input-box">
                <label>Password</label>
                <input type="password" placeholder="Enter password" required id="password" />
            </div>
        </div>
        <div class="column" style="display:none">
            <div class="input-box">
                <label>School</label>
                <input type="text" placeholder="Enter school" id="school" required />
            </div>
            <div class="input-box">
                <label>Class</label>
                <input type="text" placeholder="Enter class" required id="class" />
            </div>
        </div>
        <div class="column">
            
            <div class="input-box">
                <label>User Type</label>
                <select id="roles" name="roles" asp-items="@ViewBag.RoleList" class="form-control " required>
                    <option disabled selected>--Select Types--</option>
                </select>
            </div>


            <div class="input-box">
                <label>Birth Date</label>
                <input type="date" placeholder="Enter birth date" id="dob" required />
            </div>
        </div>

        <button id="submitBtn" type="button">Submit</button>
    </form>
</section>


